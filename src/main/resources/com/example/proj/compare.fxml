<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:controller="com.example.proj.CompareController" xmlns:fx="http://javafx.com/fxml" prefHeight="486.0" prefWidth="617.0">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <HBox spacing="10">
                <ComboBox fx:id="cityBox" promptText="בחר עיר" />
                <ComboBox fx:id="areaBox" promptText="בחר אזור" />
                <Button text="Start Comparison" onAction="#startComparison"/>
            </HBox>
            <HBox spacing="10" VBox.vgrow="ALWAYS">
                <WebView fx:id="webviewCustom" prefHeight="350" prefWidth="300" HBox.hgrow="ALWAYS"/>
                <WebView fx:id="webviewTSP" prefHeight="350" prefWidth="300" HBox.hgrow="ALWAYS"/>
            </HBox>
            <TableView fx:id="resultTable" prefHeight="100">
                <columns>
                    <TableColumn fx:id="paramColumn" text="פרמטר"/>
                    <TableColumn fx:id="customColumn" text="האלגוריתם שלי"/>
                    <TableColumn fx:id="tspColumn" text="TSP מדויק"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
